---
import Container from "./Container.astro";
import Topic from "./Topic.astro";
import servicesData from "./Data/services.json";
import { cn } from "../utils.ts";
---

<Container>
  <div class="relative flex flex-col items-center" id="how-it-works">
    <div class="flex-row items-center py-5 mb-8">
      <div class="grid grid-cols-1 sm:grid-cols-1 md:grid-cols-2 gap-4">
        <!-- card start-->
        {
          servicesData.map(({ name1, name2, image }, idx) => (
            <div
              class={cn(
                "md:h-[310px] h-[620px] p-12 bg-zinc-100 rounded-[45px] shadow-card border border-black justify-between items-center flex md:flex-row flex-col text-black",
                {
                  "bg-zinc-100": [0, 3].includes(idx),
                  "bg-ridiorange": [1, 4].includes(idx),
                  "bg-black text-white": [2, 5].includes(idx),
                  "md:col-span-2": idx === 4,
                },
              )}
            >
              <div class="flex flex-col justify-center p-6 items-center md:items-start gap-[93px]">
                <div class="flex flex-col justify-start items-start max-w-[50%]">
                  <div class="px-[7px] rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                    <div class=" text-3xl font-medium">{name1}</div>
                  </div>
                  <div class="px-[7px] rounded-[7px] flex-col justify-start items-start gap-2.5 flex">
                    <div class="text-3xl font-medium">{name2}</div>
                  </div>
                </div>
              </div>
              <div class="pt-0.5 pb-[1.95px] size-full justify-center items-center flex">
                <img
                  class="max-h-[270px] size-full object-contain h-full"
                  src={image}
                />
              </div>
            </div>
          ))
        }
        <!-- card end-->
      </div>
    </div>

    <Topic
      title="HOW IT WORKS"
      description="I want to ride, not navigate. So, I built Ridi, an app that takes all the guesswork out of it. You tell it what kind of roads you love – highways, primaries, unclassified’s, tracks, paths, residential? Gravel, sand? Smooth roads or tracks? Choose your style and it’ll whip up a perfect route tailored to your exact preferences. Or just choose one of the default rule sets. Whether it’s a quick spin through scenic roads or a heart-pounding journey through twisty paths, Ridi’s got you covered."
    />
  </div>
</Container>
