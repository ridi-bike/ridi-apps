---
import "../styles/global.css";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
import PostHog from "../components/Posthog.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Motorcycle navigation app" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Moto.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Ridi to ride</title>
    <meta
      name="description"
      content="Generate the perfect motorcycling route based based on your preferences with Ridi"
    />
    <meta property="og:title" content="Ridi Motorcycle Routes" />
    <meta
      property="og:description"
      content="Generate the perfect motorcycling route based based on your preferences with Ridi"
    />
    <meta property="og:image" content="https://ridi.bike/hero-image.png" />
    <meta property="og:url" content="https://ridi.bike" />
    <meta property="og:type" content="website" />

    <link
      href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <PostHog />
    <ViewTransitions />
  </head>
  <body class="bg-white font-SpaceGrotesk">
    <Navbar />
    <slot />
    <Footer />
  </body>
</html>
