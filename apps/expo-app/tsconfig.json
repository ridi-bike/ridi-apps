{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"noImplicitAny": true,
		"allowJs": false,
		"strictNullChecks": true,
		// "noUncheckedIndexedAccess": true,
		// "strictFunctionTypes": true,
		// "exactOptionalPropertyTypes": true,
		"jsx": "react-jsx",
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"~/*": [
				"*"
			]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"nativewind-env.d.ts"
	],
	"exclude": [
		"**/node_modules/**/*"
	]
}